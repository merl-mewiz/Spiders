<%= content_for :title  do %>
  Task <%= @task.title %>
<% end %>

<%= content_for :top_panel  do %>
<div class="px-3 py-2 bg-top-panel">
  <div class="container">
    <div class="row">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <%= link_to tasks_path, class: 'btn btn-sm btn-top-panel' do %>
          <i class="bi bi-arrow-left btn-top-panel-icon"></i>
          Back
        <% end %>
        <button type="button" class="btn btn-sm btn-top-panel ms-3" data-bs-toggle="modal" data-bs-target="#deleteModal">
          <i class="bi bi-trash3-fill btn-top-panel-icon"></i>
          Delete task
        </button>

        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content rounded-3 custom-shadow">
              <div class="modal-body p-4 text-center">
                <h5 class="mb-2">Do you want delete the task?</h5>
                <p class="mb-0"><i><%= @task.title %></i></p>
              </div>
              <div class="modal-footer flex-nowrap p-0">
                <!-- <button type="button" class="btn btn-lg btn-link text-danger fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><strong>Delete</strong></button> -->
                <%= link_to task_path(@task), method: :delete, class: 'btn btn-lg btn-link text-danger fs-6 text-decoration-none col-6 m-0 rounded-0 border-end' do %>
                  <strong>Delete</strong>
                <% end %>

                <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0" data-bs-dismiss="modal">Cancel</button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<% end %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card custom-shadow mb-5 rounded-4">
        <div class="card-body p-4">
          <h5 class="card-title card-title-custom mb-1"><%= @task.title %></h5>
          <div class="text-muted mb-4">
            Task editing
          </div>

          <%= content_for :add_update_button do %>
            <%= button_tag(type: "submit", class: "btn btn-apply mt-4") do %>
              <i class="bi bi-save standart-button-icon"></i>
              Update task
            <% end %>
          <% end %>

          <%= render 'add_edit_form', task: @task %>
        </div>
      </div>
    </div>
  </div>
</div>