<%= content_for :title  do %>
  New task
<% end %>

<%= content_for :top_panel  do %>
<div class="px-3 py-2 bg-top-panel">
  <div class="container">
    <div class="row">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <%= link_to tasks_path, class: 'btn btn-sm btn-top-panel' do %>
          <i class="bi bi-arrow-left btn-top-panel-icon"></i>
          Back
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card custom-shadow mb-5 rounded-4">
        <div class="card-body p-4">
          <h5 class="card-title card-title-custom mb-1">New task</h5>
          <div class="text-muted mb-4">
            Creating a new task
          </div>

          <%= content_for :add_update_button do %>
            <%= button_tag(type: "submit", class: "btn btn-apply mt-4") do %>
              <i class="bi bi-plus-lg standart-button-icon"></i>
              Add task
            <% end %>
          <% end %>

          <%= render 'add_edit_form', task: @task %>
        </div>
      </div>
    </div>
  </div>
</div>