<%= content_for :title do %>
  Tasks
<% end %>

<%= content_for :top_panel  do %>
<div class="px-3 py-2 bg-top-panel">
  <div class="container">
    <div class="row">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <%= link_to new_task_path, class: 'btn btn-sm btn-top-panel' do %>
          <i class="bi bi-plus-lg btn-top-panel-icon"></i>
          New task
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card custom-shadow mb-5 rounded-4">
        <div class="card-body p-4">
          <h5 class="card-title card-title-custom mb-1">Tasks</h5>
          <div class="text-muted mb-4">
            List of current tasks
          </div>
          <% if @tasks && @tasks.count.positive? %>
            <table class="table table-hover">
              <thead class="custom-thead mb-2">
                <tr>
                  <th scope="col" class="col-1">Status</th>
                  <th scope="col" class="text-center col-1">Priority</th>
                  <th scope="col" class="col-5">Title</th>
                  <th scope="col" class="col-5"></th>
                </tr>
              </thead>
              <tbody>
                <% @tasks.each do |task| %>
                    <tr>
                      <td class="col-1">
                        <span class="badge me-2 <%= task.status.color_class %>">
                          <%= task.status.title %>
                        </span>
                      </td>
                      <td class="col-1 text-center">
                        <span class="badge me-2 <%= task.priority.color_class %>">
                          <%= task.priority.title %>
                        </span>
                      </td>
                      <td class="col-9">
                        <%= link_to task_path(task), class: 'table-title-link' do %>
                          <%= task.title %>
                        <% end %>
                        <div class="table-description">
                          <%= task.description.truncate(250) %>
                        </div>
                      </td>
                      <td class="col-1 table-buttons">
                        <%= link_to task_path(task), class: 'table-button-link table-button-edit', title: 'Edit' do %>
                          <i class="bi bi-pencil-fill"></i>
                        <% end %>
                      </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="mt-4">
              <h6 class="text-muted">No data</h6>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>